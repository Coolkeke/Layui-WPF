<UserControl
    x:Class="LayuiComponentExample.Views.DateTime"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Lay="clr-namespace:LayUI.Wpf.Controls;assembly=LayUI.Wpf"
    xmlns:prism="http://prismlibrary.com/"
    prism:ViewModelLocator.AutoWireViewModel="True">
    <ScrollViewer>
        <StackPanel HorizontalAlignment="Left">
            <Lay:LayDatePicker
                Width="250"
                Height="35"
                Margin="5" />
            <Lay:LayDateRangePicker
                Width="250"
                Height="35"
                Margin="5" />
            <Lay:LayDateTimePicker
                Width="250"
                Height="35"
                Margin="5" />
            <Lay:LayTimePicker
                Width="250"
                Height="35"
                Margin="5" />
            <Calendar Margin="5" />
            <Lay:LayTextBox
                Width="250"
                Margin="5"
                Text="{Binding ElementName=time, Path=Time, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            <Lay:LayTimer x:Name="time" Margin="5" />
        </StackPanel>
    </ScrollViewer>
</UserControl>
